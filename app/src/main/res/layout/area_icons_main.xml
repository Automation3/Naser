<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_toStartOf="@+id/btnUp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/areaIcons"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/areaGrid"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layoutDirection="rtl"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/grid1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="15dp"
                android:src="@drawable/view_horizontal" />

            <ImageView
                android:id="@+id/grid2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="15dp"
                android:src="@drawable/view_square_2" />

            <ImageView
                android:id="@+id/grid3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="15dp"
                android:visibility="gone"
                android:src="@drawable/view_square_3" />

            <ImageView
                android:id="@+id/grid4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="15dp"
                android:src="@drawable/view_vertical_1" />

            <ImageView
                android:id="@+id/grid5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="15dp"
                android:src="@drawable/view_vertical_2" />

            <ImageView
                android:id="@+id/grid6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_margin="15dp"
                android:src="@drawable/view_vertical_3" />
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>